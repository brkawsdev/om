pipeline{
    agent any 
    stages{
        stage("build"){
            agent {
                docker {
                    image "openjdk-11"
                }
            }
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonarqb') {
                    // some block
                        
                            sh " chmod +x gradlew"
                            sh " ./gradew sonarqube"
                        }
                        timeout(5) {
                        // some block
                        def sq = waitforqualitygate()
                        if (sq.status != 'ok'){
                            error "pipeline aborted due to quality gate failure: ${sq.status} ." 

                            
                        }
                    
                    }
                }
        }
          }

    }

}